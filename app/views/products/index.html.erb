<h3>Book Catalogue</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Price</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.picture %></td>
        <td><%= number_to_currency product.price, unit: "Â£" %></td>
        <td><%= product.date_published.strftime("%Y") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Remove book from catalogue?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
